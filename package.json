{
  "name": "runescript-lsp",
  "version": "0.0.1",
  "type": "module",
  "description": "Language Server Protocol implementation for Runescript",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": "./dist/server.js",
    "./commands": {
      "types": "./dist/public/commands.d.ts",
      "default": "./dist/public/commands.js"
    },
    "./settings": {
      "types": "./dist/public/settings.d.ts",
      "default": "./dist/public/settings.js"
    },
    "./types": {
      "types": "./dist/public/types.d.ts",
      "default": "./dist/public/types.js"
    }
  },
  "dependencies": {
    "runescript-parser": "^0.1.6",
    "vscode-uri": "^3.0.8",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "eslint": "^9.19.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20"
  }
}
